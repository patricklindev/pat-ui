{
  "name": "pat-ui",
  "version": "0.1.3",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "React components library",
  "license": "MIT",
  "keywords": [
    "Components library",
    "React",
    "UI"
  ],
  "homepage": "https://github.com/patricklindev/pat-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/patricklindev/pat-ui"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "react-icons": "^4.6.0"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "clean-lib": "rimraf ./dist",
    "build": "npm run clean-lib && npm run build-lib",
    "build-lib": "tsc -p tsconfig.lib.json && node-sass ./src/styles/index.scss ./dist/index.css",
    "build-lib-local-test": "npm run build && cp ./package.localtest.json ./dist/package.json && rimraf ../pat-ui-local && cp -R ./dist ../pat-ui-local",
    "test:nowatch": "react-scripts test --watchAll=false",
    "test": "react-scripts test",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public -o docs",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "quotes": [
        "error",
        "single"
      ]
    }
  },
  "prettier": {
    "singleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-info": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^5.3.19",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.53",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "cra-template-typescript": "1.0.3",
    "node-sass": "^4.14.1",
    "react": "^16.8.0",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^16.8.0",
    "react-scripts": "3.4.1",
    "rimraf": "^3.0.2",
    "typescript": "^3.7.5"
  }
}
